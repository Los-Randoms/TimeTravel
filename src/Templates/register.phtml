<div class="container">
	<h1>Registro</h1>
	<form action="?submit" method="POST" enctype="application/x-www-form-urlencoded">
		<div class="field">
			<label>Ingresa tu correo electronico: </label>
			<input class="inpt" type="email" name="email">
		</div>
		<div class="field">
			<label>Nombre de usuario: </label>
			<input class="inpt" type="text" name="username">
		</div>
		<div class="field">
			<label>Ingresa tu contraseña</label>
			<input class="inpt" type="password" name="password">
			<span>Confirma la contraseña: </span>
			<input class="inpt" type="password">
		</div>
		<button class="btn" type="submit">Registrarse</button>
	</form>
</div>
